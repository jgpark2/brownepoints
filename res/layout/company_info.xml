<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#FFFFFF">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Company Info"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:textColor="#000000"
            android:textSize="30dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="449dp"
                    android:id="@+id/relativeLayout" android:layout_gravity="right">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_alignParentStart="false"  android:weightSum="1"
                      android:id="@+id/linearLayout" android:clickable="true">
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1"
                      android:layout_weight="0.04">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Average Company Rating: "
                          android:id="@+id/AverageCompanyRating" android:textColor="#000000"
                          android:textAlignment="center"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/average_company_rating_input" android:textColor="#000000"/>

            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
                <TextView android:layout_width="wrap_content" android:layout_height="37dp"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Average Ad Rating: "
                          android:id="@+id/AverageAdRating" android:textColor="#000000"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:id="@+id/average_ad_rating_input" android:textColor="#000000"/>

            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1"
                      android:layout_weight="0.04">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Average Age: "
                          android:id="@+id/AverageAge" android:layout_weight="0.03" android:textColor="#000000"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:id="@+id/average_age_input" android:layout_weight="0.03" android:textColor="#000000"/>

            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="0.04">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Gender Ratio: "
                          android:id="@+id/GenderRatio" android:textColor="#000000"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:id="@+id/gender_ratio_input" android:textColor="#000000"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="0.04">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Other: "
                          android:id="@+id/textView6" android:textColor="#000000"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:layout_weight="0.04">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Other:  "
                          android:id="@+id/textView7" android:textColor="#000000"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="0.04">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Other:   "
                          android:id="@+id/textView8" android:textColor="#000000"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:layout_weight="0.33">
                <TextView android:layout_width="wrap_content" android:layout_height="44dp"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Other:  "
                          android:id="@+id/textView9" android:textColor="#000000"/>
            </TableRow>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="View Company Ads"
                    android:id="@+id/button"
                    android:onClick="view_ads_button" android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true" android:clickable="true"
                    android:layout_gravity="center_horizontal" android:layout_weight="0.04"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>