<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#232323">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Search Results"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:textColor="@android:color/white"
            android:textSize="30dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:id="@+id/relativeLayout" android:layout_gravity="right">

        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="fill_parent" android:layout_alignParentTop="true"
                      android:layout_alignParentStart="true" android:layout_above="@+id/button" android:weightSum="1"
                      android:id="@+id/linearLayout" android:clickable="true">
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1"
                      android:layout_weight="0.10">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="UserName: "
                          android:id="@+id/textView4" android:layout_weight="0.03" android:textColor="@android:color/white"/>
                <TextView android:layout_width="257dp" android:layout_height="39dp"
                          android:inputType="textPersonName" android:ems="10"
                          android:id="@+id/search_user_info_username" android:textColor="#000000"
                          android:background="#f7f7f7" android:textAlignment="center" android:textSize="20dp"
                          android:textColorHint="#a00000" android:textColorHighlight="#a00000"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1"
                      android:layout_weight="0.10" android:id="@+id/tableRow">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Credibility: "
                          android:id="@+id/textView2" android:layout_weight="0.03" android:textColor="@android:color/white"/>
                <TextView android:layout_width="257dp" android:layout_height="39dp" android:inputType="textPersonName"
                          android:ems="10" android:id="@+id/search_user_info_credibility" android:textColor="#000000"
                          android:background="#f7f7f7" android:textAlignment="center" android:textSize="20dp"
                          android:textColorHint="#a00000" android:textColorHighlight="#a00000"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="0.13">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Country: "
                          android:id="@+id/textView5" android:textColor="#ffffff"/>
                <TextView android:layout_width="match_parent" android:layout_height="34dp" android:ems="10"
                          android:id="@+id/search_user_info_country" android:textColor="#000000" android:background="#f7f7f7"
                          android:textSize="20dp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="0.09">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="State: "
                          android:id="@+id/textView6" android:textColor="#ffffff"/>
                <TextView android:layout_width="299dp" android:layout_height="35dp" android:ems="10"
                          android:id="@+id/search_user_info_state" android:textColor="#000000"
                          android:background="#f7f7f7" android:textSize="20dp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:layout_weight="0.09">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Ethnicity:  "
                          android:id="@+id/textView7" android:textColor="#ffffff"/>
                <TextView android:layout_width="match_parent" android:layout_height="37dp"
                          android:id="@+id/search_user_info_ethnicity" android:textColor="#000000"
                          android:background="#f7f7f7" android:textSize="20dp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="0.11">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Age:   "
                          android:id="@+id/textView8" android:textColor="#ffffff"/>
                <TextView android:layout_width="wrap_content" android:layout_height="37dp"
                          android:ems="10" android:id="@+id/search_user_info_age"
                          android:layout_weight="1" android:textColor="#000000" android:background="#f7f7f7"
                          android:textSize="20dp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:weightSum="1">
                <TextView android:layout_width="wrap_content" android:layout_height="44dp"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Gender:  "
                          android:id="@+id/textView9" android:textColor="#ffffff" android:layout_weight="0.02"/>
                <TextView
                        android:layout_width="224dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/search_user_info_gender" android:textColor="#000000"
                        android:background="#f7f7f7"
                        android:textSize="20dp" android:textIsSelectable="false"/>

            </TableRow>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
