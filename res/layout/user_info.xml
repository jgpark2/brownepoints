<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#FFFFFF">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="User Info"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:textColor="#000000"
            android:textSize="30dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:id="@+id/relativeLayout" android:layout_gravity="right">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Update Account"
                android:id="@+id/button"
                android:onClick="update_account_button" android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" android:clickable="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="fill_parent" android:layout_alignParentTop="true"
                      android:layout_alignParentStart="true" android:layout_above="@+id/button" android:weightSum="1"
                      android:id="@+id/linearLayout" android:clickable="true">
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1"
                      android:layout_weight="0.04">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Email: "
                          android:id="@+id/textView2" android:layout_weight="0.31" android:textColor="#000000"
                          android:textAlignment="center"/>
                <EditText android:layout_width="293dp" android:layout_height="37dp"
                          android:inputType="textEmailAddress" android:ems="10" android:id="@id/user_info_email"
                          android:layout_gravity="right" android:textColor="#000000"
                          android:text="example@example.com" android:background="#dddddd"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
                <TextView android:layout_width="wrap_content" android:layout_height="46dp"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Password: "
                          android:id="@+id/textView3" android:layout_weight="0.05" android:textColor="#000000"/>
                <EditText android:layout_width="match_parent" android:layout_height="32dp"
                          android:inputType="textPassword" android:ems="10" android:id="@+id/user_info_password"
                          android:layout_gravity="right" android:textColor="#000000" android:text="password"
                          android:background="#dddddd"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1"
                      android:layout_weight="0.04">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="UserName: "
                          android:id="@+id/textView4" android:layout_weight="0.03" android:textColor="#000000"/>
                <EditText android:layout_width="match_parent" android:layout_height="39dp"
                          android:inputType="textPersonName" android:text="username" android:ems="10"
                          android:id="@+id/user_info_username" android:textColor="#000000"
                          android:background="#dddddd"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="0.04">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Country: "
                          android:id="@+id/textView5" android:textColor="#000000"/>
                <EditText android:layout_width="match_parent" android:layout_height="34dp" android:ems="10"
                          android:id="@+id/user_info_country" android:textColor="#000000" android:background="#dddddd"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="0.04">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="State: "
                          android:id="@+id/textView6" android:textColor="#000000"/>
                <EditText android:layout_width="match_parent" android:layout_height="35dp" android:ems="10"
                          android:id="@+id/user_info_state" android:textColor="#000000"
                          android:background="#dddddd"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:layout_weight="0.04">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Ethnicity:  "
                          android:id="@+id/textView7" android:textColor="#000000"/>
                <EditText android:layout_width="match_parent" android:layout_height="37dp"
                          android:id="@+id/user_info_ethnicity" android:textColor="#000000"
                          android:background="#dddddd"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_weight="0.04">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Age:   "
                          android:id="@+id/textView8" android:textColor="#000000"/>
                <EditText android:layout_width="wrap_content" android:layout_height="37dp"
                          android:inputType="number" android:ems="10" android:id="@+id/user_info_age"
                          android:layout_weight="1" android:textColor="#000000" android:background="#dddddd"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:layout_weight="0.33">
                <TextView android:layout_width="wrap_content" android:layout_height="44dp"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Gender:  "
                          android:id="@+id/textView9" android:textColor="#000000"/>
                <RadioGroup android:layout_width="fill_parent" android:layout_height="fill_parent" android:weightSum="1"
                            android:clickable="false">
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                 android:text="Male" android:id="@+id/user_info_male" android:checked="false"
                                 android:textColor="#000000" android:visibility="visible" android:ellipsize="none"
                                 android:paddingLeft="15dp"/>
                    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                 android:text="Female" android:id="@+id/user_info_female" android:checked="false"
                                 android:textColor="#000000" android:layout_weight="0.19" android:paddingLeft="15dp"/>
                </RadioGroup>
            </TableRow>
        </LinearLayout>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Delete Account"
                android:id="@+id/button2" android:onClick="delete_account_button"
                android:layout_below="@+id/linearLayout"
                android:minWidth="130dp" android:background="#C92103" android:clickable="true"
                android:focusable="true" android:focusableInTouchMode="false" android:textSize="20dp"/>
    </RelativeLayout>
</LinearLayout>